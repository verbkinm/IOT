
// Событие - изменение данных (data)

    // при изменении данных на устройстве switch на 0-м канале, если данные равны 0, записать данные (значение 1) на устройство switch в 1-й канал

    "id_" : {
        // Устройство - switch
        // тип события - data
        // направление данных - изменении данных на устройстве
        // данные для сравнения - 0
        // тип данных - bool
        // сравнение типа - равняется ( == )
        // номер канала - 0
        "event" : {
            "host_name" : "switch",
            "type" : "data",
            "direction" : "change",
            "data" : 0,
            "data_type" : "bool",
            "compare" : "==",
            "chNumber" : 0

        },
        // тип действия - отправка данных (data_tx)
        // имя устройства - switch
        // номер канала - 1
        // данные - 0
        // тип данных - bool
        "action" : {
            "type" : "data_tx",
            "host_name" : "switch",
            "chNumber" : 1,
            "data" : 0,
            "data_type" : "bool"
        }
    }

    // При изменении данных на устройстве switch на 0-м канале, передать данные на устройство switch на 2-й канал с устройства switch 0-го канала

    // Устройство - switch
    // тип события - data
    // направление данных - изменении данных на устройстве
    // сравнение типа - всегда истинна ( always true )
    // номер канала - 0
    "id_" : {
    "event" : {
        "host_name" : "switch",
        "type" : "data",
        "direction" : "change",
        "compare" : "always true",
        "chNumber" : 0

    },
    // тип действия - отправка на устройство данных другого устройства (data_tx_ref)
    // имя устройства источника - switch
    // имя устройства приёмника - switch
    // номер канала источника - 0
    // номер канала приёмника - 2
    "action" : {
        "type" : "data_tx_ref",
        "src_host" : "switch",
        "dst_host" : "switch",
        "src_chNumber" : 0,
        "dst_chNumber" : 2
    }

    // При отправке данных на устройстве switch на 0-й канале, если данные равны 0, отправить на устройство switch на 1-й канал данные равные 1
    "id_" : {
        // Устройство - switch
        // тип события - data
        // направление данных - отправка данных (tx)
        // сравнение типа - равняется ( == )
        // данные для сравнения - 0
        // тип данных - bool
        // номер канала - 0
        "event" : {
            "host_name" : "switch",
            "type" : "data",
            "direction" : "tx",
            "compare" : "==",
            "data" : 0,
            "data_type" : "bool",
            "chNumber" : 0

        },
        // тип действия - отправка данных (data_tx)
        // имя устройства - switch
        // номер канала - 1
        // данные - 1
        // тип данных - bool
        "action" : {
            "type" : "data_tx",
            "host_name" : "switch",
            "data" : 1,
            "data_type" : "bool",
            "chNumber" : 1
        }
    }

    // При получении данных на устройстве switch на 0-й канале, если данные равны 0, отправить на устройство switch на 1-й канал данные равные 1.
    // Получение данных идёт периодически с установленным интервалом в настройках хоста.
    "id_" : {
        // Устройство - switch
        // тип события - data
        // направление данных - получение данных (rx)
        // сравнение типа - равняется ( == )
        // данные для сравнения - 0
        // тип данных - bool
        // номер канала - 0
        "event" : {
            "host_name" : "switch",
            "type" : "data",
            "direction" : "rx",
            "compare" : "==",
            "data" : 0,
            "data_type" : "bool",
            "chNumber" : 0

        },
        // тип действия - отправка данных (data_tx)
        // имя устройства - switch
        // номер канала - 1
        // данные - 1
        // тип данных - bool
        "action" : {
            "type" : "data_tx",
            "host_name" : "switch",
